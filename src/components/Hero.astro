---
import { Icon } from 'astro-icon'

const {
  desktopImg = 'https://res.cloudinary.com/jimymltta/image/upload/v1710884769/Yogi%20Food/yogi-banner_ihpoxn.png',
  mobileImg = 'https://res.cloudinary.com/jimymltta/image/upload/v1710884762/Yogi%20Food/yogi-mobile-banner_kfqj04.png',
} = Astro.props
---

<style lang="scss">
  .custom-background {
    height: 100vh;
    width: 100vw;
    background-size: cover;
    background-position: center;
    background-image: url(https://res.cloudinary.com/jimymltta/image/upload/v1710884762/Yogi%20Food/yogi-mobile-banner_kfqj04.png);

    @media (max-width: 768px) {
      background-image: url(https://res.cloudinary.com/jimymltta/image/upload/v1710884762/Yogi%20Food/yogi-mobile-banner_kfqj04.png);
    }
  }

  .button-container {
    @media (max-width: 768px) {
      flex-direction: column;
    }
  }

  .button {
    @media (max-width: 768px) {
      font-size: 14px;
      padding: 10px 20px;
    }
  }

  .text-gradient {
    color: var(--primary-400);
  }

  :global(.darkmode .text-gradient) {
    color: var(--primary-400);
  }
</style>

<section class="relative bg-center bg-no-repeat bg-cover custom-background">
  <div class="flex flex-col items-center justify-center h-full">
    <div>
      <div class="flex flex-col gap-3 mt-12 button-container sm:flex-row">
        <a
          class="button has-icon"
          href="https://deliveroo.fr/fr/menu/Amiens/saint-germain-les-halles-saint-leu-notre-dame/yogi-19-rue-de-metz?geohash=u0ceggbg1c5e"
        >
          <Icon pack="ic" name="outline-food-bank" />
          Commander
        </a>
        <a class="button has-icon color-primary" href="/carte">
          <Icon pack="jam" name="document" />
          Voir le menu
        </a>
      </div>
    </div>
  </div>
</section>
