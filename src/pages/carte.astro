---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import { menuItems } from '../data/menuItems.js'
import { Image } from 'astro:assets'
---

<DefaultLayout title="La carte">
  <section class="y-12">
    <div class="my-10 mx-14">
      <h1>Notre carte</h1>
      <p>Découvrez nos délicieux plats</p>
    </div>
    <h2 class="my-10 mx-14">Plats</h2>
    <div class="flex items-center justify-center mx-10">
      <div class="grid grid-cols-1 gap-8 mx-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        {
          menuItems.map((item) => (
            <div>
              <a href={item.link}>
                <Image
                  src={item.image}
                  alt={item.name}
                  width="250"
                  height="250"
                  class="object-cover w-full h-auto aspect-square"
                />
                <div>
                  <h3>{item.name}</h3>
                  <p>{item.description}</p>
                  <span>{item.price}</span>
                </div>
              </a>
            </div>
          ))
        }
      </div>
    </div>

    <div>
      <h2 class="mt-10 mx-14">Combos</h2>
      <p class="mx-14">Les Combos sont disponibles uniquement le midi</p>
      <div class="flex items-center justify-center mx-10 my-20">
        <div class="grid grid-cols-1 gap-20 mx-4 md:grid-cols-2">
          <a
            href="https://deliveroo.fr/fr/menu/Amiens/saint-germain-les-halles-saint-leu-notre-dame/yogi-19-rue-de-metz/?geohash=u0ceggbg1c5e&item-id=1491669054"
          >
            <div class="p-10 border border-white rounded">
              <h4>Ddeokbokki 떡볶이 + Demi KimBap 김밥</h4>
              <span>10,50€</span>
            </div>
          </a>
          <a
            href="https://deliveroo.fr/fr/menu/Amiens/saint-germain-les-halles-saint-leu-notre-dame/yogi-19-rue-de-metz/?geohash=u0ceggbg1c5e&item-id=1491669054"
          >
            <div class="p-10 border border-white rounded">
              <h4>Ddeokbokki + Demi KimBap 김밥</h4>
              <span>11€</span>
            </div>
          </a>
        </div>
      </div>
    </div>

    <div>
      <h2 class="mt-10 mx-14">Dochirak</h2>
      <p class="mx-14"></p>
      <div class="flex items-center justify-center mx-10 my-20">
        <div class="grid grid-cols-1 gap-20 mx-4 md:grid-cols-2">
          <a
            href="https://deliveroo.fr/fr/menu/Amiens/saint-germain-les-halles-saint-leu-notre-dame/yogi-19-rue-de-metz/?geohash=u0ceggbg1c5e&item-id=1491669045"
          >
            <div class="p-10">
              <img
                src="https://res.cloudinary.com/jimymltta/image/upload/v1705073726/Yogi%20Food/Bulgogi_flgeaq.jpg"
                width="500"
                height="500"
                class="object-cover w-full h-auto mb-6 aspect-square"
              />
              <h4>Bulgogi</h4>
              <span>11,50€ sans boisson | 13€ avec boisson</span>
            </div>
          </a>
          <a
            href="https://deliveroo.fr/fr/menu/Amiens/saint-germain-les-halles-saint-leu-notre-dame/yogi-19-rue-de-metz/?geohash=u0ceggbg1c5e&item-id=1491669049"
          >
            <div class="p-10">
              <img
                src="https://res.cloudinary.com/jimymltta/image/upload/v1705073717/Yogi%20Food/Spam_m6fkyj.jpg"
                width="500"
                height="500"
                class="object-cover w-full h-auto mb-6 aspect-square"
              />
              <h4>Spam</h4>
              <span>11,50€ sans boisson | 13€ avec boisson</span>
            </div>
          </a>
        </div>
      </div>
    </div>

    <div>
      <h2 class="mt-10 mx-14">Banchan</h2>
      <div class="flex items-center justify-center mx-10 my-20">
        <a
          href="https://deliveroo.fr/fr/menu/Amiens/saint-germain-les-halles-saint-leu-notre-dame/yogi-19-rue-de-metz/?geohash=u0ceggbg1c5e&item-id=1491669033"
        >
          <div class="p-10">
            <img
              src="https://res.cloudinary.com/jimymltta/image/upload/v1705073717/Yogi%20Food/Omelette_roule%CC%81_qxmspm.jpg"
              width="250"
              height="250"
              class="object-cover h-auto mb-6 aspect-square"
            />
            <h4>Omelette roulée</h4>
            <span>6,50€</span>
          </div>
        </a>
      </div>
    </div>

    <div>
      <h2 class="mt-10 mx-14">Boissons</h2>
      <div class="my-20 mx-14">
        <p>Coréenne - 3,50€</p>
        <p>San Pellegrino 33cl, orange sanguine/orange/menthe & citron - 2,10€</p>
        <p>San Pellegrino 33cl, eau gazeuse - 1,90€</p>
        <p>Evian 50cl - 1,90€</p>
        <p>Bière sans alcool - 5€</p>
        <p>Café coréen - 2€</p>
      </div>
    </div>
  </section>
</DefaultLayout>
