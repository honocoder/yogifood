---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import { menuItems } from '../data/menuItems.js'
import { Image } from 'astro:assets'
---

<DefaultLayout title="La carte">
  <section class="y-12">
    <div class="mx-14 my-10">
      <h1>Notre carte</h1>
      <p>Découvrez nos délicieux plats</p>
    </div>
    <h2 class="mx-14 my-10">Plats</h2>
    <div class="mx-10 flex items-center justify-center">
      <div class="mx-4 grid grid-cols-4 gap-8">
        {
          menuItems.map((item) => (
            <div>
              <Image src={item.image} alt={item.name} width="250" height="250" class="aspect-square object-cover" />
              <div>
                <h3>{item.name}</h3>
                <p>{item.description}</p>
                <span>{item.price}</span>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div>
      <h2 class="mx-14 mt-10">Combos</h2>
      <p class="mx-14">Les Combos sont disponibles uniquement le midi</p>
      <div class="mx-10 my-20 flex items-center justify-center">
        <div class="mx-4 grid grid-cols-2 gap-20">
          <div class="rounded border border-white p-10">
            <h4>Ddeokbokki + Demi KimBap</h4>
            <span>10,50€</span>
          </div>
          <div class="rounded border border-white p-10">
            <h4>Ddeokbokki + Demi KimBap</h4>
            <span>11€</span>
          </div>
        </div>
      </div>
    </div>

    <div>
      <h2 class="mx-14 mt-10">Dochirak</h2>
      <p class="mx-14"></p>
      <div class="mx-10 my-20 flex items-center justify-center">
        <div class="mx-4 grid grid-cols-2 gap-20">
          <div class="rounded border border-white p-10">
            <img
              src="https://res.cloudinary.com/jimymltta/image/upload/v1705073726/Yogi%20Food/Bulgogi_flgeaq.jpg"
              width="500"
              height="500"
              class="mb-6 aspect-square object-cover"
            />
            <h4>Bulgogi</h4>
            <span>11,50€ sans boisson | 13€ avec boisson</span>
          </div>
          <div class="rounded border border-white p-10">
            <img
              src="https://res.cloudinary.com/jimymltta/image/upload/v1705073717/Yogi%20Food/Spam_m6fkyj.jpg"
              width="500"
              height="500"
              class="mb-6 aspect-square object-cover"
            />
            <h4>Spam</h4>
            <span>11,50€ sans boisson | 13€ avec boisson</span>
          </div>
        </div>
      </div>
    </div>

    <div>
      <h2 class="mx-14 mt-10">Banchan</h2>
      <div class="mx-10 my-20 flex items-center justify-center">
        <div class="rounded border border-white p-10">
          <img
            src="https://res.cloudinary.com/jimymltta/image/upload/v1705073717/Yogi%20Food/Omelette_roule%CC%81_qxmspm.jpg"
            width="500"
            height="500"
            class="mb-6 aspect-square object-cover"
          />
          <h4>Omelette roulée</h4>
          <span>6,50€</span>
        </div>
      </div>
    </div>

    <div>
      <h2 class="mx-14 mt-10">Boissons</h2>
      <div class="mx-14 my-20">
        <p>Coréenne - 3,50€</p>
        <p>San Pellegrino 33cl, orange sanguine/orange/menthe & citron - 2,10€</p>
        <p>San Pellegrino 33cl, eau gazeuse - 1,90€</p>
        <p>Evian 50cl - 1,90€</p>
        <p>Bière sans alcool - 5€</p>
        <p>Café coréen - 2€</p>
      </div>
    </div>
  </section>
</DefaultLayout>
